@model List<MyBlogNight2.EntityLayer.Models.CategoryArticleCountViewModel>


<div class="widget">
    <h2 class="widget-title">Popüler Kategoriler</h2>
    <div class="link-widget">
        <ul>

            @foreach (var item in Model)
            {

                <li><a href="#">@item.CategoryName <span>(@item.ArticleCount)</span></a></li>
               
            }
        </ul>
    </div><!-- end link-widget -->
</div><!-- end widget -->