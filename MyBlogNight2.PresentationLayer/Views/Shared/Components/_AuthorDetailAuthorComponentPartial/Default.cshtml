@model MyBlogNight2.EntityLayer.Concrete.AppUser


<div class="custombox authorbox clearfix">
    <h4 class="small-title">Yazar Hakkında</h4>
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
            <img src="@Model.ImageUrl" alt="" class="img-fluid rounded-circle">
        </div><!-- end col -->

        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
            <h4><a href="#">@Model.Name @Model.Surname</a></h4>
            <p>@Model.Detail</p>

        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end author-box -->